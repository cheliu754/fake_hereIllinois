{
  "name": "attendance-system",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "api": "yarn workspace @attendance/api",
    "frontend": "yarn workspace @attendance/frontend",
    "dev": "concurrently \"yarn api dev\" \"yarn frontend dev\"",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
